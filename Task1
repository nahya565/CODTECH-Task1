            height: 100vh;
            margin: 0;
            background-color: #f2f2f2;
        }
        .todo-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            width: 300px;
        }
        .todo-container h2 {
            text-align: center;
            color: #333;
        }
        .input-container {
            display: flex;
            margin-bottom: 10px;
        }
        .input-container input {
            flex: 1;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px 0 0 4px;
            outline: none;
        }
        .input-container button {
            padding: 8px;
            border: none;
            background-color: #28a745;
            color: #fff;
            border-radius: 0 4px 4px 0;
            cursor: pointer;
        }
        .input-container button:hover {
            background-color: #218838;
        }
        .todo-list {
            list-style: none;
            padding: 0;
